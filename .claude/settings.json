{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_ENABLE_TASKS": "true"
  },
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(docker *)",
      "Bash(docker compose *)",
      "Bash(uv *)",
      "Bash(ruff *)",
      "Bash(ty *)",
      "Bash(mise *)",
      "Bash(npm *)",
      "Bash(node *)",
      "Bash(gh *)",
      "Bash(pytest *)",
      "Bash(npx vitest *)",
      "Bash(./scripts/swarm-status.sh *)",
      "Bash(./scripts/swarm-launch.sh *)",
      "Bash(bash .claude/hooks/*)"
    ],
    "deny": [
      "Read(**/.env*)",
      "Write(**/.env*)",
      "Edit(**/.env*)",
      "Read(**/secrets/**)",
      "Write(**/secrets/**)",
      "Edit(**/secrets/**)"
    ]
  },
  "hooks": {
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/swarm-quality-gate.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task-lifecycle.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/swarm-teammate-idle.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/swarm-file-guard.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/projects/jade-monolith/scripts/statusline.sh"
  }
}
